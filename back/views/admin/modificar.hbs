<div class="container" style="margin-top:100px;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar una nueva novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}"></input>
                </div>

                <div class="form-group">
                    <label for="">Subtitulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}"></input>
                </div>
                <div class="mb-3 row">
                    <label>Imagen:<input type="file" class="form-control" name="imagen" id="imagen" /></label>
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                    Eliminar imagen actual</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">

                    </label>
                </div>
                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea class="form-control" name="cuerpo"
                        value="{{novedad.cuerpo}}">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>

            </form>

        </div>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}
    </div>